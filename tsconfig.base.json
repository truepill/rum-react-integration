{
  "compilerOptions": {
    "baseUrl": "src",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "strict": true,
    "target": "es2015",
    "sourceMap": true,
    "jsx": "react-jsx",
    "types": ["vite/client", "vitest/globals", "@testing-library/jest-dom"],
    "lib": ["ES2016", "DOM"],
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "vite.config.ts", "vitest.*.ts"]
}
